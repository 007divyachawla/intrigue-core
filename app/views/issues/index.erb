<div class="row">
  <div id="findings-table" class="col-sm-12">
    <script type="text/javascript" src="/js/sorttable.js"></script>
    <style>
    /* Sortable tables */
    table.sortable {
      width: 100%;
      border: 0;
      table-layout:fixed;
      word-wrap:break-word;
      border-collapse:collapse;
    }

    table.sortable thead {
        background-color:#eee;
        color:#666666;
        font-weight: bold;
        cursor: default;
    }
    </style>
    <p></p>
    <table class="sortable" border="1" width=100%>
      <colgroup>
        <col style="width:30%">
        <col style="width:10%">
        <col style="width:10%">
        <col style="width:10%">
        <col style="width:40%">
      </colgroup>
      <tbody>
      <tr><th>Name</th><th>Type</th><th>Status</th><th>Severity</th><th>Description</th></tr>
      <% @issues.each do |issue| %>
        <tr>
          <td><a href="<%="/#{h @project_name}/issues/#{h issue.id}"%>"><%= h issue.name %></a></td>
          <td><%=issue.type%></td>
          <td><%=issue.status%></td>
          <td><%=issue.severity%></td>
          <td><%=issue.description%></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
