<script language="javascript" type="text/javascript">
function delete_entity(id)
{
  var check = confirm('Are you sure?');
  if (check == true) {
      document.entity_delete_form.entity.value = id;
      document.entity_delete_form.action = "/v1/<%=@project_name%>/meta_entities/" + id + "/delete"
      document.entity_delete_form.submit();
      return true;
  }
  else {
      return false;
  }
}
</script>

<div class="col-sm-2">
  <p>
  Selected Entities Count: <%= @alias_group_count %><br/>
  <a href="/v1/<%=@project_name%>/entities.csv">Export CSV</a><br/>
  </p>

  <form class="form-horizontal" id="entity_search" target="_self" method="get" action="/v1/<%=@project_name%>/entities">

    Search:
    <input type="text" style='width:100%' class="form-control sm" id="search_string" name="search_string" value="<%= h params["search_string"]%>">
    Types:<br/>
    <select size=10 style='height:200%; color:#000000;' multiple name="entity_types[]">
      <% Intrigue::Model::Entity.descendants.map{|x|x.to_s}.sort.each do |d| %>
        <option value="<%=d%>"><%=d%></option>
      <% end %>
    </select><br/>
    <input id="correlate" name="correlate" type="checkbox"> Correlate Entities <br/><br/>

    <input class="btn btn-primary" type="submit" value="Search">
  </form>
  <br/>
  <%= erb :'_statistics' %>
</div>
<div class="col-sm-10">
    <%= "Page: #{@page}" %>
    <%= "Results: #{@result_count * (@page-1)} .. #{@result_count * @page-1}" %>
    <a href="/v1/<%=@project_string%>/entities?search_string=<%=@search_string%>&correlate=on&page=<%=@page-1%>&<%=@entity_types.map{|x| "entity_types[]=#{x}" }.join("&") if @entity_types %>">previous</a>
    <a href="/v1/<%=@project_string%>/entities?search_string=<%=@search_string%>&correlate=on&page=<%=@page+1%>&<%=@entity_types.map{|x| "entity_types[]=#{x}" }.join("&") if @entity_types %>">next</a>

  <script src="/js/sorttable.js"></script>
  <style>
  /* Sortable tables */
  table.sortable {
    width: 100%;
    border: 0;
    table-layout:fixed;
    word-wrap:break-word;
    border-collapse:collapse;
  }

  table.sortable thead {
      background-color:#eee;
      color:#666666;
      font-weight: bold;
      cursor: default;
  }
  </style>
  <p></p>
  <table class="sortable" border="1" width=100%>
    <colgroup>
      <col style="width:60%">
      <col style="width:40%">
    </colgroup>
    <tbody>
      <tr><th>name</th><th>details</th></tr>
      <% @alias_groups.each do |group| %>
        <% next unless group.entities.count > 0 %>
        <tr>
          <td>
          <% group.entities.each do |e| %>
              <% next if e.hidden; %>[<a href="/v1/<%=@project_name%>/entities/<%=e.id%>"> <%= h e %> </a>]
          <% end %>
          </td>
          <td>
          <% group.entities.each do |e| %>
              <% next if e.hidden; %><a href="/v1/<%=@project_name%>/entities/<%=e.id%>"> <%= h e.detail_string %> </a>
          <% end %>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
  <br>
<form name="entity_delete_form" method="get"><input type="hidden" id="entity" name="entity"/></form>
</div>
