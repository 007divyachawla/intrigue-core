<h3>Task Result: <a href="<%=@rerun_uri || nil%>"><%=@task_result.task_name %></a> </h3>
<p>ID: <%=@task_result.id %> </p>
<p>Start: <%=@task_result.timestamp_start %> </p>
<p>End: <%= @task_result.timestamp_end %> </p>
<p>Elapsed (s): <%= @elapsed_time %> </p>
<p>Entity: <a href=/v1/entities/<%=@task_result.base_entity.id if @task_result.base_entity %>><%= h "#{@task_result.base_entity}" %></a></p>
<p>Complete: <%= @task_result.complete %></p>
Export:
<ul>
  <li><a href=<%="#{request.url}.csv"%>> CSV </a></li>
  <li><a href=<%="#{request.url}.json"%>> JSON </a></li>
  <li><a href=<%="#{request.url}.tsv"%>> TSV </a></li>
</ul>
Entities:
<div id="entities">
  <p>[Getting the entities...]</p>
</div>

<script>
// super hacky ajax
function getEntities(id){
  //get the list of tasks and rewrite the task
  $.getJSON(location.origin + "/v1/task_results/"+ id +".json", function(data) {
    console.log(data);
    $( "#entities" ).empty();
    // Set the values based on just this task's allowed type
    $( "#entities" ).innerHTML= "<ul><ul/>"
    $.each(data["entities"], function(id, hash) {
      $( "#entities" ).append( "<li><a href='/v1/entities/" + hash["id"] + "'> " + hash["type"] + ": "+  hash["name"] + "</a></br></li>" );
      });
    $( "#entities" ).append = "</ul>"
  });
}

window.setInterval(function(){
  getEntities(<%=@task_result.id%>);  //calling every 5 seconds
}, 10000);

//call right away
getEntities(<%=@task_result.id%>);

</script>

